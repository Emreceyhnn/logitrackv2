generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  ADMIN
  MANAGER
  DISPATCHER
  DRIVER
  WAREHOUSE
  DEFAULT
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum VehicleType {
  TRUCK
  VAN
}

enum VehicleStatus {
  AVAILABLE
  ON_TRIP
  MAINTENANCE
}

enum DriverStatus {
  ON_JOB
  OFF_DUTY
  ON_LEAVE
}

enum WarehouseType {
  DISTRIBUTION_CENTER
  CROSSDOCK
  WAREHOUSE
}

enum RouteStatus {
  PLANNED
  ACTIVE
  COMPLETED
  CANCELED
}

// Models

model Company {
  id         String      @id @default(cuid())
  name       String      @unique
  avatarUrl  String?
  users      User[]
  warehouses Warehouse[]
  vehicles   Vehicle[]
  drivers    Driver[]
  shipments  Shipment[]
  routes     Route[]
  customers  Customer[]
  inventory  Inventory[]
  inventoryMovements InventoryMovement[]
  documents  Document[]
  issues     Issue[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("companies")
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  permissions String[]
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("roles")
}

model User {
  id                String      @id @default(cuid())
  username          String?     @unique
  email             String      @unique
  name              String
  surname           String
  password          String?
  avatarUrl         String?
  roleId            String?
  role              Role?       @relation(fields: [roleId], references: [id])
  status            UserStatus  @default(ACTIVE)
  lastLoginAt       DateTime?
  companyId         String?
  company           Company?    @relation(fields: [companyId], references: [id])
  // Relations
  driver            Driver?
  managedWarehouses Warehouse[] // Managers can manage multiple warehouses
  inventoryMovements InventoryMovement[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Driver {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  employeeId    String    @unique
  licenseNumber String?
  licenseType   String?
  licenseExpiry DateTime?

  phone  String
  status DriverStatus @default(OFF_DUTY)

  // Compliance & Metrics
  safetyScore     Int?
  efficiencyScore Int?
  rating          Float?

  // Relations
  currentVehicleId String?  @unique
  currentVehicle   Vehicle? @relation(fields: [currentVehicleId], references: [id])

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  homeBaseWarehouseId String?
  homeBaseWarehouse   Warehouse? @relation(fields: [homeBaseWarehouseId], references: [id])

  shipments Shipment[]
  routes    Route[]
  documents Document[]
  issues    Issue[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("drivers")
}

model Vehicle {
  id      String      @id @default(cuid())
  fleetNo String      @unique
  plate   String      @unique
  type    VehicleType
  brand   String
  model   String
  year    Int

  status VehicleStatus @default(AVAILABLE)

  // Specs
  maxLoadKg Int
  fuelType  String // DIESEL, ELECTRIC, etc.

  // Live Status (Simplified for now)
  currentLat Float?
  currentLng Float?
  fuelLevel  Int?
  odometerKm Int?

  // Relations
  driver Driver? // Reverse relation from Driver.currentVehicle 

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  nextServiceKm    Int?
  avgFuelConsumption Float?

  maintenanceRecords MaintenanceRecord[]
  routes             Route[]
  documents          Document[]
  issues             Issue[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("vehicles")
}

model MaintenanceRecord {
  id        String  @id @default(cuid())
  vehicleId String
  vehicle   Vehicle @relation(fields: [vehicleId], references: [id])

  type        String // Routine, Repair, etc.
  date        DateTime
  cost        Float
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("maintenance_records")
}

model Warehouse {
  id   String        @id @default(cuid())
  code String        @unique
  name String
  type WarehouseType

  // Address
  address String
  city    String
  country String
  lat     Float?
  lng     Float?

  // Capacity
  capacityPallets Int    @default(5000)
  capacityVolumeM3 Int   @default(100000)
  operatingHours   String? @default("08:00 - 18:00")

  // Management
  managerId String?
  manager   User?   @relation(fields: [managerId], references: [id])

  // Relations
  inventory Inventory[]
  movements InventoryMovement[]
  drivers   Driver[] // Home base for drivers

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("warehouses")
}

model Customer {
  id       String  @id @default(cuid())
  code     String  @unique
  name     String
  industry String?
  taxId    String?

  // Contact
  email   String?
  phone   String?
  address String?

  shipments Shipment[]

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("customers")
}

model Inventory {
  id          String    @id @default(cuid())
  warehouseId String
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])

  sku      String // Keeping simple for now, could be its own model
  name     String
  quantity Int
  minStock Int    @default(0)

  updatedAt DateTime @updatedAt

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  @@unique([warehouseId, sku])
  @@map("inventory")
}

model InventoryMovement {
  id          String    @id @default(cuid())
  warehouseId String
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])

  sku      String
  quantity Int
  type     String // PICK, PUTAWAY, ADJUSTMENT
  date     DateTime @default(now())

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  @@map("inventory_movements")
}

model Shipment {
  id         String @id @default(cuid())
  trackingId String @unique

  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])

  driverId String?
  driver   Driver? @relation(fields: [driverId], references: [id])

  status      String // PENDING, IN_TRANSIT, DELIVERED, etc.
  origin      String
  destination String

  itemsCount Int @default(1)

  routeId String?
  route   Route?  @relation(fields: [routeId], references: [id])

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  history ShipmentHistory[]
  issues  Issue[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("shipments")
}

model ShipmentHistory {
  id         String   @id @default(cuid())
  shipmentId String
  shipment   Shipment @relation(fields: [shipmentId], references: [id], onDelete: Cascade)

  status      String
  location    String?
  description String?

  createdAt DateTime @default(now())
  createdBy String? // User ID or System

  @@map("shipment_history")
}

model Route {
  id     String      @id @default(cuid())
  name   String?
  status RouteStatus @default(PLANNED)

  // Scheduling
  date      DateTime
  startTime DateTime?
  endTime   DateTime?

  // Metrics
  distanceKm  Float?
  durationMin Int?

  // Location
  startAddress String?
  startLat     Float?
  startLng     Float?

  endAddress String?
  endLat     Float?
  endLng     Float?

  // Relations
  driverId String?
  driver   Driver? @relation(fields: [driverId], references: [id])

  vehicleId String?
  vehicle   Vehicle? @relation(fields: [vehicleId], references: [id])

  shipments Shipment[]

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // Fixed typo here (removed extra space if any)

  @@map("routes")
}

model Document {
  id         String    @id @default(cuid())
  type       String // LICENSE, INSURANCE, PERMIT, etc.
  name       String
  url        String
  expiryDate DateTime?
  status     String

  // Relations - A document can belong to a Driver OR a Vehicle
  driverId String?
  driver   Driver? @relation(fields: [driverId], references: [id])

  vehicleId String?
  vehicle   Vehicle? @relation(fields: [vehicleId], references: [id])

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("documents")
}

model Issue {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   // OPEN, IN_PROGRESS, RESOLVED, CLOSED
  priority    String   // LOW, MEDIUM, HIGH, CRITICAL
  type        String   // VEHICLE, DRIVER, SHIPMENT, OTHER

  // Relations
  vehicleId   String?
  vehicle     Vehicle? @relation(fields: [vehicleId], references: [id])
  
  driverId    String?
  driver      Driver?  @relation(fields: [driverId], references: [id])
  
  shipmentId  String?
  shipment    Shipment? @relation(fields: [shipmentId], references: [id])

  companyId   String?
  company     Company?  @relation(fields: [companyId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("issues")
}
